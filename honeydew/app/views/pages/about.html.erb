<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3">
        <section class="panel bg-opaque">
          <header class="panel-heading bg-dark-opaque">
           <%= link_to inbox_path(current_user.id) do %>
                  <i class="fa fa-chevron-left text-white"></i>
              <% end %>
          </header>
          <div class="panel-body">
            <ul class="nav nav-pills nav-stacked mail-nav">
              <li class="inactive"><%= link_to inbox_path(current_user.id) do %>
                        <span class="badge small pull-right">2</span>
                    Task # 32 : I need someone to...
                <% end %></li>
              <li class="inactive"><%= link_to inbox_path(current_user.id) do %>
                    <span class="badge small pull-right">1</span>
                    Task # 32 : I need someone to...
                <% end %></li><li class="inactive"><%= link_to inbox_path(current_user.id) do %>

                  Task # 32 : I need someone to...
              <% end %></li><li class="inactive"><%= link_to inbox_path(current_user.id) do %>
                  <span class="badge small pull-right">0</span>
                  Task # 32 : I need someone to...
              <% end %></li><li class="inactive"><%= link_to inbox_path(current_user.id) do %>
                  <span class="badge small pull-right">2</span>
                  Task # 32 : I need someone to...
              <% end %></li>
            </ul>
          </div>
        </section>
      </div>

      <div class="col-sm-9">
        <section class="panel bg-opaque">
          <header class="panel-heading bg-dark-opaque">
            <h4 class="gen-case">Inbox (2)
            </h4>
          </header>

          <div class="panel-body minimal">
            <div class="mail-option">
              <div class = "row">
                <div class = "col-sm-6 pull-left">
                 page_entries_info @tasks
                </div>
                <div class = "col-sm-6 pull-right">
                  will paginate
                </div>
              </div>
              <div class = "row">
                <p class = "pull-right">2 messages</p>
              </div>
            </div>

            <div class="table-inbox-wrap ">
              <div class = "col-lg-8 col-lg-offset-2">
                <p class="text-center text-info m-t-10 small">
                  Last Message: <span class="text-muted"><td class="text-right"><% if current_user.created_at.to_date > 7.days.ago %>
                      <%= time_ago_in_words(@task.created_at) %> ago
                  <% else %> <%= current_user.created_at.strftime("%B %d") %><%end %></td></span>
                </p>
                <div class = "chat-container-modal row">

                      <div class = "row">
                        <p class="chat-bubble chat-bubble-left">
                          <%= link_to image_tag(current_user.image_url, class: "img-circle chat-bubble-avatar chat-bubble-avatar-left"), user_path(current_user.id)%>
                          hello hello hello!
                        </p>
                      </div>
                  <div class = "row">
                    <p class="chat-bubble chat-bubble-right">
                      <%= link_to image_tag(current_user.image_url, class: "img-circle chat-bubble-avatar chat-bubble-avatar-right"), user_path(current_user.id)%>
                      hello hello hello!
                    </p>
                  </div>
                  <div class = "row">
                    <p class="chat-bubble chat-bubble-left">
                      <%= link_to image_tag(current_user.image_url, class: "img-circle chat-bubble-avatar chat-bubble-avatar-left"), user_path(current_user.id)%>
                      hello hello hello!
                    </p>
                  </div>
                </div>
                <div class = "row m-t-10">
                  <div class = "col-xs-10">
                        <%= text_field :body, class: "form-control" %>
                        </div>
                        <div class = "col-xs-2">
                          <%= button_tag :Reply, name:"task", value: "1", class:"btn btn-danger btn-block" %>
                    </div>
                    </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<script>
    $("tr[data-link]").click(function() {
        window.location = $(this).data("link")
    });
</script>
