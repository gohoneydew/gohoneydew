<%= form_for( Message.new, html: {class:"form-horizontal", role: "form"}) do |f|%>
<div class="modal modal-dark-lter fade" id="decline" role="dialog" aria-labelledby="decline" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="decline">Rio Runner</h4>
      </div>
      <div class="modal-body">
        <div class = "row text-white-opaque">
          <div class = "col-sm-10">
            <h2 class = "text-center">Send Message</h2>



                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:recipient_id, :value => @message.sender_id)%>
                  </div>
                </div>
                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:task_id, :value => @message.task_id)%>
                  </div>
                </div>

                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:subject, :value => "You have unfortunately not been chosen for job # #{@message.task_id}")%>
                  </div>
                </div>
                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:message_type, :value => "decline")%>
                  </div>
                </div>

                <div class = "form-group">
                  <%= f.label :body, class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-envelope-o fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.text_area :body, class:"form-control col-sm-offset-1", placeholder: "optional" %>
                  </div>
                </div>

                </div>
                </div>

            </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Decline Offer", class:"btn btn-danger pull-right"%>
      </div>
            <% end %>
    </div>
  </div>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->


