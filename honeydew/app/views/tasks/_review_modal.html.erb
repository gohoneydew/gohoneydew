<%= simple_form_for(@review, html: {class:"form-horizontal", role: "form"}, :controller => "reviews") do |f|%>
    <div class="modal modal-dark-lt fade" id="review" role="dialog" aria-labelledby="review" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="review">Honey Dew</h4>
      </div>
      <div class="modal-body">
        <div class = "row">
          <div class = " col-sm-12 text-white">
            <h2 class = "text-center">Leave Review</h2>

                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:task_id, :value => @task.id)%>
                  </div>
                </div>
                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:user_id, :value => @task.runner_id)%>
                  </div>
                </div>
                <div class = "form-group">
                  <%= image_tag(@runner.image_url , :class => "img-circle img-icon pull-left") %>
                  <div class = "col-sm-10">
                    <div class = ""><h4><%=@runner.private_name%></div></h4>
                  </div>
                </div>
                <div class = "form-group">
                  <%= f.label :score, class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-plus-square-o fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.number_field :score, class: "rating col-sm-offset-2", placeholder:"Score", :id => "input-1", :data => {:min => "0", :max => "5", :step => "1"} %>
                  </div>
                </div>

                <div class = "form-group">
                  <%= f.label "Review", class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-envelope-o fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.text_area :body, class:"form-control", placeholder: "Leave Review" %>
                  </div>
                </div>

                </div>
                </div>

            </div>
      <div class = "modal-footer">
        <%= f.submit "Submit Review", class:"btn btn-success pull-right"%>
      </div>
    </div>
  </div>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->






<td><%= link_to "Leave Review", {:controller => "reviews", :action => "create", :id => @task.id }%></td>
<% end %>