          <%= image_tag("garage.jpg" , :class => "img-responsive img-thumbnail img-xs") %>
        </div>
        <div class = "col-md-6">
          <h2 class = "text-black"><%=@task.subject%></h2>
          <% if @task.task_type == "auto" %>
          <div class = "tx-div small"></div>

          <h1 class = "price">$<%=number_with_precision(@task.price * 0.85, :precision => 2) %></h1>
          <h4 class = "text-black">Rating Required:</h4>
          <div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%=@task.rating_required.to_f %>%">
              <span class="text-black-dk"><%=@task.rating_required%></span>
            </div>
          </div>
              <h4 class = "text-black">Your Rating:</h4>
          <div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%=@task.average_rating(current_user).to_f %>%">
              <span class="text-black-dk"><%=@task.average_rating(current_user)%></span>
            </div>
          </div>
          <% end %>
          <div class = "tx-div small"></div>
          <div class = "col-md-8">
            <h4 class = "text-black"><%= @task.description %></h4>
          </div>
