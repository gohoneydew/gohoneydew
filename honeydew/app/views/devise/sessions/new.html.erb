<style>
    .navbar{
        display:none;
    }
</style>
<div class="signinbackground">
    <div id="page-content-wrapper">
      <%= link_to root_path do %>
          <%= image_tag 'honeydewsimple.png', :class => "landinglogosignin animate fadeInDownBig" %>
      <% end %>
      <div class="container-fluid">
      <div class="col-md-4 col-md-offset-4 m-t-50">
        <div class="welcome animated bounceIn text-center">
          <h1>LOG IN TO<strong> HONEY DEW</strong></h1>
          <h5>v. b1.0</h5>

          <%= form_for(resource, as: resource_name, html:{class: "form-signin"} , url: session_path(resource_name)) do |f|%>
            <section>
              <div class="input-group">
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", html:{type:"email", id: "email"} %>
                <div class="input-group-addon"><i class="fa fa-envelope-o"></i></div>
              </div>
              <div class="input-group">
                <%= f.password_field :password, class:"form-control", placeholder: "Password" %>
                <div class="input-group-addon"><i class="fa fa-key"></i></div>
              </div>
            </section>
            <section class="controls">
              <div class="checkbox check-transparent">
                <% if devise_mapping.rememberable? -%>
                    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                <% end -%>
              </div>
            </section>
              <section class = "new-acc">
                <div class = "m-t-20">
                </div>
              </section>

        </div>
        </div>
              <%=button_tag "", :type => :submit, :class => "log-in btn" do%>
                  <i class="fa fa-arrow-right fa-3x"></i>
              <% end %>
          <% end %>
        <div class = "footer-signin">
        <%= render :partial => "devise/shared/links" %>
        </div>
    </div>
</div>